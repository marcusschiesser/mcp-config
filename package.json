{
  "name": "mcp-config",
  "version": "0.0.8",
  "description": "CLI client to edit MCP server configurations",
  "main": "dist/index.js",
  "bin": {
    "mcp-config": "dist/index.js"
  },
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node --esm src/index.ts",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write 'src/**/*.ts' --write 'src/**/*.json'",
    "prepare": "husky",
    "lint-staged": "lint-staged",
    "test": "echo \"Error: no test specified\" && exit 1",
    "release": "npm run build && changeset publish",
    "new-version": "changeset version && npm run format && npm run build"
  },
  "keywords": [
    "cli",
    "mcp",
    "codeium",
    "windsurf"
  ],
  "author": "Marcus Schiesser <mail@marcusschiesser.de>",
  "license": "MIT",
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@eslint/js": "^9.23.0",
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.7",
    "@types/node": "^22.13.14",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "eslint": "^9.23.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-prettier": "^5.2.5",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.0",
    "prettier": "^3.5.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.28.0"
  },
  "dependencies": {
    "@inquirer/core": "^10.1.9",
    "@inquirer/type": "^3.0.5",
    "ansi-escapes": "^7.0.0",
    "figures": "^6.1.0",
    "fs-extra": "^11.3.0",
    "inquirer": "^12.5.0",
    "picocolors": "^1.1.1"
  },
  "lint-staged": {
    "*.ts": [
      "npm run lint",
      "npm run format"
    ]
  }
}
